{
  "name": "tiny-toolkit",
  "version": "0.0.3",
  "description": "A tiny collection of useful javascript game dev tools",
  "main": "./dist/index.js",
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sajmoni/tiny-toolkit.git"
  },
  "private": false,
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "clean": "rm -f tiny-toolkit.tgz",
    "build-test": "yarn clean && yarn build && yarn pack --filename tiny-toolkit.tgz && cd example && yarn refresh && yarn test && cd -",
    "release": "yarn clean && yarn build && np",
    "test": "ava",
    "lint": "eslint src/index.js",
    "build": "rm -rf dist && rollup --config"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "np": "5.2.1",
    "prettier": "1.19.1",
    "rollup": "1.32.0"
  }
}
