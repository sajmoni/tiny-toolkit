{
  "name": "tiny-toolkit",
  "version": "0.2.0",
  "description": "A tiny collection of useful javascript game dev tools",
  "main": "./dist/index.js",
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sajmoni/tiny-toolkit.git"
  },
  "private": false,
  "ava": {
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true,
    "parser": "@typescript-eslint/parser",
    "env": [
      "es2020",
      "node"
    ],
    "rules": {
      "unicorn/numeric-separators-style": "off",
      "arrow-body-style": "off",
      "unicorn/filename-case": "off",
      "capitalized-comments": "off",
      "unicorn/no-array-reduce": "off",
      "dot-notation": "off"
    }
  },
  "scripts": {
    "go": "npm run build && preview && ava",
    "release": "npm run build && np --no-tests",
    "test": "ava",
    "build": "rm -rf dist && tsc"
  },
  "devDependencies": {
    "ava": "3.15.0",
    "np": "7.5.0",
    "package-preview": "4.0.0",
    "remeda": "0.0.30",
    "ts-node": "10.2.1",
    "typescript": "4.4.2",
    "xo": "0.47.0"
  },
  "dependencies": {
    "round-to": "5.0.0"
  }
}
